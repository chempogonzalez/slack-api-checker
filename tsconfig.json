{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "include": [
    "src/index.ts",
    "src/tools/helpers.ts",
    "src/tools/logger.ts",
  ],
  "exclude": [
    "node_modules",
    "**/__test__/*.*",
    "**/*.spec.ts"
  ]
}